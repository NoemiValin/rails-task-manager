<div>
  <ul>
    <li><% if @task.completed %>
      <i class="fa fa-check-square-o" aria-hidden="true"></i> 
      <% else %> 
      <i class="fa fa-square-o" aria-hidden="true"></i>
      <% end %></li>
  <li><h1><%= @task.title %></h1></li>
  <li><p><%=@task.details%></p></li>
  </ul>
  
  <p><%= link_to "Edit my task", edit_task_path(@task) %></p>
  <p><%= link_to "back to all my tasks", tasks_path %></p>
</div>


